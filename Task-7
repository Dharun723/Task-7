6) public static void main(String[] args) {
	        // Create a TreeMap to store employee ID and Name
	        TreeMap<Integer, String> employeeMap = new TreeMap<>();

	        // Add some random employee ID and Name pairs
	        employeeMap.put(101, "John Doe");
	        employeeMap.put(102, "Jane Smith");
	        employeeMap.put(103, "Emily Johnson");
	        employeeMap.put(104, "Michael Brown");
	        employeeMap.put(105, "Linda Davis");
	        System.out.println(employeeMap);
	    }
}
